<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:spiked3="clr-namespace:spiked3"
        xmlns:local="clr-namespace:pilot_test" x:Class="pilot_test.MainWindow"
        xmlns:Oxy="http://oxyplot.org/wpf"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Spiked3.com Pilot V1R1 Tests" Height="640" Width="850" Loaded="Window_Loaded" Closing="Window_Closing" WindowStartupLocation="CenterOwner"
        >
    <DockPanel LastChildFill="True" VerticalAlignment="Stretch">
        <Menu DockPanel.Dock="Top" >
            <MenuItem Header="_File" >
                <MenuItem Header="_Save State" Click="SaveState_Click" />
                <Separator />
                <MenuItem Header="E_xit" Click="ExitMenuItem_Click" />
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom" >
            <StackPanel Orientation="Horizontal" >
                <Label Content="Serial Open: "  Margin="4,0,4,0"/>
                <TextBlock Text="{Binding SerialIsOpen, FallbackValue=NA}" VerticalAlignment="Center" Margin="4,0,4,0"/>
            </StackPanel>
        </StatusBar>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="209*"/>
                <ColumnDefinition Width="69*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="132" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="4" />
                <RowDefinition Height="6*" />
            </Grid.RowDefinitions>

            <ListBox ItemsSource="{Binding CommandList}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.Row="0"  >
                <ListBox.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Width" Value="78" />
                        <Setter Property="Height" Value="42" />
                        <Setter Property="Margin" Value="4" />
                    </Style>
                    <Style TargetType="{x:Type ToggleButton}">
                        <Setter Property="Width" Value="78" />
                        <Setter Property="Height" Value="42      " />
                        <Setter Property="Margin" Value="4" />
                        <Setter Property="Background" Value="WhiteSmoke" />
                    </Style>
                </ListBox.Resources>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
            
            <spiked3:JoystickControl x:Name="Joy1" Width="120" Height="120" Margin="4" Grid.Column="1" Background="Ivory"/>
            
            <Grid Grid.Row="1" Grid.ColumnSpan="2" >
                <TabControl  >
                    <TabItem  Header="Motor">
                        <StackPanel  Orientation="Horizontal">
                            <local:MotorPanel Margin="8" />
                            <Separator Style="{StaticResource VerticalSeparatorStyle}"/>
                            <Oxy:PlotView x:Name="OxyM1" Model="{Binding M1PlotModel}" Width="320"/>
                            <Separator Style="{StaticResource VerticalSeparatorStyle}"/>
                            <Oxy:PlotView x:Name="OxyM2" Model="{Binding M2PlotModel}" Width="320"/>
                            <Separator Style="{StaticResource VerticalSeparatorStyle}"/>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Other" >
                        
                    </TabItem>
                </TabControl>
            </Grid>

            <GridSplitter Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" />
            
            <spiked3:Console x:Name="console1" Grid.Row="3" VerticalAlignment="Stretch" Grid.ColumnSpan="2"  />

        </Grid>
    </DockPanel>
</Window>