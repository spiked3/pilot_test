<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:spiked3="clr-namespace:spiked3"
        xmlns:local="clr-namespace:pilot_test" x:Class="pilot_test.MainWindow"
        xmlns:Oxy="http://oxyplot.org/wpf"
        DataContext="{Binding RelativeSource={RelativeSource Self}}" 
        Title="Spiked3.com Pilot V0 R6.8 Tests" Height="894" Width="1100" Loaded="Window_Loaded" Closing="Window_Closing" WindowStartupLocation="CenterOwner"
        >
    <DockPanel LastChildFill="True" VerticalAlignment="Stretch">
        <Menu DockPanel.Dock="Top" >
            <MenuItem Header="_File" >
                <MenuItem Header="_Save State" Click="SaveState_Click" />
                <Separator />
                <MenuItem Header="E_xit" Click="ExitMenuItem_Click" />
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom" >
            <StackPanel Orientation="Horizontal" >
                <Label Content="Comm Status:"  Margin="4,0,4,0"/>
                <TextBlock Text="{Binding CommStatus, FallbackValue=None}" VerticalAlignment="Center" Margin="4,0"/>
                <StackPanel Orientation="Horizontal"  Margin="8,0">
                    <Label Content="X:" />
                    <TextBlock Text="{Binding X}" Width="72" />
                    <Label Content="Y:" />
                    <TextBlock Text="{Binding Y}" Width="72" />
                    <Label Content="H:" />
                    <TextBlock Text="{Binding H}" Width="36" />
                </StackPanel>
            </StackPanel>
        </StatusBar>

        <Grid x:Name="mainGrid" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="209*"/>
                <ColumnDefinition Width="69*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="4" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <ListBox ItemsSource="{Binding CommandList}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.Row="0"  >
                <ListBox.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Width" Value="78" />
                        <Setter Property="Height" Value="42" />
                        <Setter Property="Margin" Value="4" />
                    </Style>
                    <Style TargetType="{x:Type ToggleButton}">
                        <Setter Property="Width" Value="78" />
                        <Setter Property="Height" Value="42      " />
                        <Setter Property="Margin" Value="4" />
                        <Setter Property="Background" Value="WhiteSmoke" />
                    </Style>
                </ListBox.Resources>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>

            <spiked3:JoystickControl x:Name="Joy1" Grid.Column="1" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />

            <ListBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.Row="1" Grid.ColumnSpan="2" >
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel> >

                <StackPanel Orientation="Vertical" VerticalAlignment="Top" >
                    <StackPanel Orientation="Horizontal" Margin="4" >
                        <Label Content="Pwr" />
                        <TextBox Text="{Binding MotorPower,UpdateSourceTrigger=PropertyChanged,Delay=500}" />
                        <Button Style="{DynamicResource sendButton}" Click="Power_Click" Foreground="White" Background="DarkGray"/>
                        <Label Content="Caution: Automatic send on change" Margin="8,0" Width="220"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="4" >
                        <Label Content="TurnH" />
                        <TextBox Text="{Binding TurnH}" />
                        <Label Content="TurnPwr" />
                        <TextBox Text="{Binding TurnPwr}" />
                        <Button Style="{DynamicResource sendButton}" Click="Turn_Click" Foreground="White" Background="DarkGray"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="4" >
                        <Label Content="MoveD" />
                        <TextBox Text="{Binding MoveD}" />
                        <Label Content="MovePwr" />
                        <TextBox Text="{Binding MovePwr}" />
                        <Button Style="{DynamicResource sendButton}" Foreground="White" Background="DarkGray"/>
                    </StackPanel>

                    <local:MotorPanel x:Name="motorPanel1" Margin="8" />
                </StackPanel>

                <Separator Style="{StaticResource VerticalSeparatorStyle}"/>

                <Oxy:PlotView x:Name="oxy1" Model="{Binding oxy1Model}" Width="640" Margin="4,2" Height="480" />

            </ListBox>

            <GridSplitter x:Name="splitter1" Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" />

            <spiked3:Console x:Name="console1" Grid.Row="3" VerticalAlignment="Stretch" Grid.ColumnSpan="2"  />

        </Grid>
    </DockPanel>
</Window>